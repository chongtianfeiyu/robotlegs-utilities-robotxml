package org.robotlegs.utilities.robotxml.views {		import org.robotlegs.utilities.robotxml.views.FolderPicker;	import org.robotlegs.utilities.robotxml.models.Location;		import org.robotlegs.mvcs.Mediator;		import flash.events.Event;		public class FolderPickerMediator extends Mediator 	{				// declare the view to be injected		[Inject] public var view:FolderPicker;		[Inject] public var model:Location;				//--------------------------------------------------------------------------		//		//  Initialization		//		//--------------------------------------------------------------------------		/**		 * Avoid doing work in the constructor!		 * onRegister() is the place to do things. 		 * 		 */				public function FolderPickerMediator() 		{						// Try not to put stuff in the constructor of the mediator		}				//--------------------------------------------------------------------------		//		//  Overridden API		//		//--------------------------------------------------------------------------		/**		 * Initialize the view and register for events. 		 * 		 */		override public function onRegister():void		{						trace("FolderPickerMediator.onRegister()");			//eventMap.mapListener(eventDispatcher, EventType.EVENT_NAME, eventHandlerFunction, eventClass);			eventMap.mapListener(view, FolderPicker.NEW_FOLDER, folderPickedEvent);		}				//--------------------------------------------------------------------------		//		//  Event Handlers		//		//--------------------------------------------------------------------------				protected function folderPickedEvent(e:Event):void		{			// Ok, we've got the folder, what's the next step?			model.folderPath = view.getDirectory();					}			}}