package com.josyule.utilities.robotxml.views {	import flash.filesystem.File;	import flash.display.Sprite;	import fl.controls.Button;		public class FolderPicker extends Sprite 	{				private var folderPickerBtn:fl.controls.Button;				//--------------------------------------------------------------------------		//		//  Initialization		//		//--------------------------------------------------------------------------		/**		 * Event handling takes place via the mediator: FolderPickerMediator 		 * 		 */				public function FolderPicker() 		{						setup();		}						/**		*	Setup all the required widgets this view uses.		*	Notably, this would be a folder/file chooser (from the AIR Lib), 		*	and some kind of output to show what the current chosen folder is.		*/		protected function setup():void		{			folderPickerBtn = new fl.controls.Button();			folderPickerBtn.label = "Pick Folder";			addChild(folderPickerBtn);		}			}}